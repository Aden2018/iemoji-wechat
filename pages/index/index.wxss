/* pages/index/index.wxss */
.card {
    border: 2px solid #ffffff;
    border-radius: 2px;
    background-color: #ffffff;
    box-shadow: 0px 3px 1px #cccccc;
    margin: 2%;
    width: 44%;
    height: 22%;
    display: inline-block;
}

.image{
  width: 96%;
  margin-top: 10px;
  margin-left: auto;
  margin-right: auto;
  display: block;
}

.title {
  margin: 8px;
  font-size: 14px;
  display: block;  
}

.note {
  margin:8px;
  margin-top: 25px;
  display: block; 
  font-size: 13px;
  font-weight: bold;
  font-family:monospace;
}